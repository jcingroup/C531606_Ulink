@{
    ViewBag.Title = "觀看演講";
    ViewBag.BodyClass = "Videos";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 class="sr-only">@ViewBag.Title</h2>

<section id="content">
	
	<div id="banner">
		<h3 class="h3 wrap">
			<span class="title">@ViewBag.Title</span>
		</h3>
		<img class="thumb" src="~/Content/images/Videos/banner.jpg" alt="">
	</div>

    <div class="wrap">

    	<ul class="breadcrumb text-md-right">
    		<li><a href="~/Index">Home</a></li>
    		<li>@ViewBag.Title</li>
    	</ul>

    	@* <ul class="filter list-inline">
    		<li>所有主題</li>
    		<li>主題1</li>
    		<li>主題2</li>
    	</ul> *@

    	@* <hr> *@

    	<div class="card-list row">
			<article class="video card">
				<a href="~/Videos/Content001" class="card-img-top">
					<img src="~/Content/images/Videos/data/001/cover.jpg" alt="">
					<i class="icon play"></i>
					<small>
						<span class="name"></span>
						<span class="date"><i class="ti-calendar"></i>2016-05-28</span>
					</small>
				</a>
				<div class="card-block">
					<h3 class="card-title">壯遊客 - 遇見塔曼</h3>
					<p class="card-text">
						考驗，是為了探尋不一樣的生活姿態。追尋木的根源，挑戰塔曼的勇士之路。
					</p>
					<a href="~/Videos/Content001" class="more">觀看演講</a>
				</div>
			</article>
		</div>
        
    </div>

</section>


@{
    ViewBag.Title = "主題活動";
    ViewBag.Title2 = "壯遊客 - 原生文化體驗營";
    ViewBag.BodyClass = "Topic";
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewBag.customShareInfo = false;
}

@section Scripts {
	<script>
		$("#banner .play").click(function() {
			$(".youtube").fadeIn();
            var url = $(".youtube iframe").attr("src");
			$(".youtube iframe").attr("src", url + "&autoplay=1");
            var h = $(".youtube .embed-responsive").outerHeight();
            $("#banner").outerHeight(h);
		});
	</script>
}

<h2 class="sr-only">@ViewBag.Title</h2>


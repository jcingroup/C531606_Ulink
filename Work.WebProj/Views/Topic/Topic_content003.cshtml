@{
    ViewBag.Title = "主題活動";
    ViewBag.Title2 = "原生文化體驗營：壯遊木作";
    ViewBag.BodyClass = "Topic";
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewBag.customShareInfo = true;
    ViewBag.ogUrl = "http://www.ulink.org.tw/Topic/Content003";
    ViewBag.ogTitle = ViewBag.Title2;
    ViewBag.ogDescription = "泰雅成年禮、野營、攀樹、木作挑戰自我：台灣優靈客協會以服務青年為主軸，暑期推出全台首創新型態「探索台灣我是壯遊客」活動，規劃內容以泰雅成年禮、野營、攀樹、木作為主題，歡迎大專青年挑戰自我體能，體驗台灣生態。";
    ViewBag.ogImgUrl = "http://www.ulink.org.tw/Content/images/Topic/data/003/ogImg.jpg";
}
@section CSS {
    <link href='https://fonts.googleapis.com/css?family=Lobster+Two:700,700italic,400,400italic' rel='stylesheet' type='text/css'>
}

@section Scripts {
    <script src="~/Content/js/jquery.lazyload.js"></script>
    <script src="~/Content/js/waterfall/isotope.pkgd.min.js"></script>
    <script>
        $(".gallery img").lazyload();
        $("html, body").animate({scrollTop: 1}); //同時使用瀑布流和lazyload時，圖片不會立刻出現，需向下捲動才會出現
        $(".gallery img").load(function() { //等圖片全部載入再動作
            $('.gallery').isotope({
                itemSelector: 'li',
                masonry: {
                    columnWidth: '.gallery li'
                }
            }); //瀑布流
        });
    </script>
}

<h2 class="sr-only">@ViewBag.Title</h2>

<section id="content">

	<div id="banner">
		<h3 class="h3 wrap hidden-md-down">
            <small><span class="name">探索台灣．我是壯遊客</span></small>
			<span class="title">@ViewBag.Title2</span>
		</h3>
        <img class="thumb" src="~/Content/images/Topic/data/003/banner.jpg" alt="">
	</div>

    <div class="wrap">

    	<ul class="breadcrumb text-md-right">
    		<li><a href="~/Index"><i class="ti-home"></i> Home</a></li>
